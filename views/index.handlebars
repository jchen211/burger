<h1>Burgers!</h1>

<h2>Yet to Eat.</h2>

<ul>
  {{#each burgers}}
    {{#unless this.devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Eaten!</h2>

<ul>
  {{#each burgers}}
    {{#if this.devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form" action="/burgers" method="POST">

  <div class="form-group">
    <label for="burger">Name of Burger:</label>
    <input type="text" id="name" name="burger_name">
  </div>

  <button type="submit">Add Burger</button>
</form>
